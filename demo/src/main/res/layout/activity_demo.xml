<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beanstream.demo.activities.DemoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bic_secure_header"
            style="@style/BICSecurePayForm"
            android:layout_alignParentTop="true"
            android:background="@color/bicSecurePayForm" />

        <!--Title-->
        <TextView
            android:id="@+id/demo_pay_label"
            style="@style/TitleText"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:text="@string/demo_pay_label" />

        <!--Button-->
        <Button
            android:id="@+id/demo_pay_button"
            style="@style/PrimaryButton"
            android:layout_below="@+id/demo_pay_label"
            android:background="@drawable/button_primary"
            android:text="@string/demo_pay_button" />

        <!--Results-->
        <TextView
            android:id="@+id/demo_payform_error"
            style="@style/ErrorText"
            android:layout_below="@+id/demo_pay_button"
            android:gravity="center"
            android:text="@string/demo_payform_eror"
            android:visibility="gone" />

        <TextView
            android:id="@+id/demo_payform_token"
            style="@style/MessageText"
            android:layout_below="@+id/demo_pay_button"
            android:gravity="center"
            android:text="@string/demo_payform_token"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>
