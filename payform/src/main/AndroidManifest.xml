<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bambora.payform">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PayForm">

        <activity android:name="com.bambora.payform.activities.PayFormActivity"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="com.beanstream.payform.LAUNCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ProcessingActivity" />

        <service
            android:name=".services.TokenService"
            android:exported="false" />
    </application>

</manifest>