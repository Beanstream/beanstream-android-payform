<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bic_secure_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/bicSecureProcessing" >

    <ImageView
        android:id="@+id/bic_secure_image"
        style="@style/BICSecureProcessing"
        android:contentDescription="@string/processing_secure" />

    <TextView
        android:id="@+id/bic_secure_text"
        style="@style/ProcessingSecureText"
        android:layout_below="@id/bic_secure_image"
        android:text="@string/processing_secure"
        android:visibility="visible" />
</RelativeLayout>