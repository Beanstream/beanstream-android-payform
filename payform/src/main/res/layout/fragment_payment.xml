<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beanstream.payform.fragments.PaymentFragment">

    <!--Back Link-->
    <TextView
        android:id="@+id/back_link"
        style="@style/BackLinkText"
        android:clickable="true"
        android:onClick="previous"
        android:text="LINK"
        android:visibility="gone" />

    <!--Title-->
    <TextView
        android:id="@+id/title_text"
        style="@style/TitleText"
        android:text="@string/pay_title" />

    <!--Fields-->
    <TableLayout
        android:id="@+id/pay_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_margin="@dimen/activity_padding"
        android:stretchColumns="*">

        <TableRow android:layout_marginBottom="@dimen/activity_padding_field_separator">

            <EditText
                android:id="@+id/pay_email"
                android:layout_span="2"
                android:hint="@string/pay_hint_email"
                android:inputType="textEmailAddress" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/pay_name"
                android:layout_span="2"
                android:hint="@string/pay_hint_name"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/pay_card_number"
                android:layout_span="2"
                android:digits="0123456789 "
                android:drawableRight="@drawable/ic_credit_card_black"
                android:hint="@string/pay_hint_card_number"
                android:inputType="number"
                android:nextFocusDown="@+id/pay_expiry"
                android:singleLine="true" />
        </TableRow>

        <TableRow android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pay_expiry"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:maxLength="5"
                android:hint="@string/pay_hint_expiry"
                android:inputType="number"
                android:nextFocusDown="@+id/pay_cvv"
                android:singleLine="true" />

            <EditText
                android:id="@+id/pay_cvv"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:drawableRight="@drawable/cvc_hint_color"
                android:hint="@string/pay_hint_cvv"
                android:inputType="number" />
        </TableRow>
    </TableLayout>
</RelativeLayout>