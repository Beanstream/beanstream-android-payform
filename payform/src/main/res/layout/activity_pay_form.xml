<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    tools:context="com.beanstream.payform.activities.PayFormActivity" >

    <TextView
        android:id="@+id/pay_label"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/pay_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bic_logo"
        android:background="@color/bicHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/beanstream_logo"
        android:padding="@dimen/logo_padding"/>

</RelativeLayout>
