<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    tools:context="com.beanstream.payform.activities.PayFormActivity">

    <!--Header-->
    <FrameLayout
        android:id="@+id/fragment_header"
        android:name="com.beanstream.payform.fragments.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:layout="@layout/fragment_header" />

    <!--Footer-->
    <ImageView
        android:id="@+id/bic_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bicSecureBackground"
        android:padding="@dimen/logo_padding"
        android:src="@drawable/beanstream_logo" />
</RelativeLayout>
