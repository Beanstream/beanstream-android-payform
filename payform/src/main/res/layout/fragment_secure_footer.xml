<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_secure_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/bicSecureProcessing"
    android:padding="@dimen/logo_padding"
    tools:context="com.beanstream.payform.fragments.SecureFooterFragment" >

    <ImageView
        android:id="@+id/bic_secure_image"
        style="@style/BICSecureProcessing" />

    <TextView
        android:id="@+id/bic_secure_text"
        style="@style/ProcessingSecureText"
        android:layout_below="@id/bic_secure_image"
        android:text="@string/processing_secure"
        android:visibility="visible" />
</RelativeLayout>
