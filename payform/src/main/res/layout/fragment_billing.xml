<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_billing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beanstream.payform.fragments.BillingFragment">

    <!--Back Link-->
    <TextView
        android:id="@+id/back_link"
        style="@style/BackLinkText"
        android:clickable="true"
        android:onClick="previous"
        android:text="LINK"
        android:visibility="gone" />

    <!--Title-->
    <TextView
        android:id="@+id/title_text"
        style="@style/TitleText"
        android:text="@string/billing_title" />

    <!--Address-->
    <FrameLayout
        android:id="@+id/fragment_address"
        android:name="com.beanstream.payform.fragments.AddressFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_text"
        tools:layout="@layout/fragment_address" />
</RelativeLayout>
